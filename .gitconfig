[core]
    excludesfile = ~/.gitignore-global

[user]
    name  = mingjinwu
    email = mingjin.wu@gmail.com

[alias]
  # Adding
    a     = add
    af    = add -f  # force

  # Statue
    st    = status
    sts   = status -s -uno

  # log
    l     = log --stat
    lgo   = log --graph --oneline

  # commit
    ci    = commit

  # diff
    d     = difftool
    ds    = difftool --staged

  # rm
    unt   = rm -r --cached # untrack some file

  # reset
    unadd = reset #unstage file
    una   = reset #unstage file

  # checkout
    co    = checkout
    

[merge]
    tool = vimdiff

[mergetool]
    #prompt = false
    tool = vimdiff

[diff]
	tool = vimdiff

[difftool]
    #prompt = false
    tool = vimdiff
	prompt = No
